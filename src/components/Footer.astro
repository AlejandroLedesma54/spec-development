---
const today = new Date();
const page_name = "Move Miami";
const whatsappMessage = encodeURIComponent("Hi! I would like more information on the 99 to 1 project");
const number = "13056321540"
const whatsappUrl = `https://wa.me/${number}text=${whatsappMessage}`;
---

<!-- Incluye Font Awesome (CDN) en tu layout principal si no lo has hecho -->
<script src="https://kit.fontawesome.com/5d703b3268.js" crossorigin="anonymous"></script>

<footer>
  <nav>
    <div class="social-links">
      <a href="https://www.instagram.com/movemiami/" target="_blank" aria-label="Instagram" class="fa-stack">
        <i class="fas fa-circle fa-stack-2x"></i>
        <i class="fab fa-instagram fa-stack-1x fa-inverse"></i>
      </a>
      <a href="https://www.youtube.com/@MoveMiami" target="_blank" aria-label="YouTube" class="fa-stack">
        <i class="fas fa-circle fa-stack-2x"></i>
        <i class="fab fa-youtube fa-stack-1x fa-inverse"></i>
      </a>
      <a href={whatsappUrl} target="_blank" aria-label="WhatsApp" class="fa-stack">
        <i class="fas fa-circle fa-stack-2x"></i>
        <i class="fab fa-whatsapp fa-stack-1x fa-inverse"></i>
      </a>
    </div>

    <div class="footer-text">
      <p>&copy; {today.getFullYear()} Powered by {page_name}</p>
    </div>
  </nav>
</footer>

<style>
  footer {
    background: white;
    color: #333;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1.5em 0;
    }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    padding: 0 1rem;
    flex-wrap: wrap;
  }

  .social-links {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .social-links .fa-stack {
    font-size: 1.8rem;
    transition: transform 0.3s ease, color 0.3s ease;
    color: #555;
  }

  .social-links .fa-stack:hover {
    color: #000;
    transform: rotate(8deg) scale(1.1);
  }

  .footer-text p {
    margin: 0;
    font-size: 0.95rem;
    color: #444;
  }

  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
