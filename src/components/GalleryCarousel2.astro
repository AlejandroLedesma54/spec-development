---
const images = Array.from({ length: 5 }, (_, i) => `/pictures/exterior${i + 1}.jpg`);
---

<div id="gallery" class="relative w-full max-w-screen-xl min-w-[1000px]" data-carousel="slide">
  <!-- Carousel wrapper -->
  <div class="relative h-[80vh] overflow-hidden rounded-lg">
    {images.map((src, index) => (
      <div
        class={`duration-700 ease-in-out ${index === 0 ? "" : "hidden"}`}
        data-carousel-item={index === 0 ? "active" : true}
      >
        <img src={src} class="block w-full h-full object-cover" alt={`Imagen ${index + 1}`} />
      </div>
    ))}
  </div>

  <!-- Slider controls -->
  <button
    type="button"
    class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
    data-carousel-prev
  >
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 hover:bg-white/50 focus:ring-4 focus:ring-white"
    >
      <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4" />
      </svg>
      <span class="sr-only">Previous</span>
    </span>
  </button>
  <button
    type="button"
    class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
    data-carousel-next
  >
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 hover:bg-white/50 focus:ring-4 focus:ring-white"
    >
      <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
      </svg>
      <span class="sr-only">Next</span>
    </span>
  </button>

  <!-- Init Flowbite after SPA page load -->
  <script>
    document.addEventListener("astro:page-load", () => {
      // @ts-ignore
      if (window.initFlowbite) window.initFlowbite();
    });
  </script>
  
</div>