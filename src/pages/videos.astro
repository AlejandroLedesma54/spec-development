---
import BaseHeadIndex from "../components/BaseHeadIndex.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHeadIndex title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="px-4 py-10 max-w-7xl mx-auto space-y-16">

<!-- Shorts -->
<section class="w-full">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center sm:text-left">
    Advances
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

    <!-- Short 1 -->
    <div class="w-full aspect-[9/16] rounded-lg overflow-hidden shadow">
      <video
        class="w-full h-full object-cover"
        controls
        preload="metadata"
        playsinline
      >
        <source src="/videos/spec1.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Short 2 -->
    <div class="w-full aspect-[9/16] rounded-lg overflow-hidden shadow">
      <video
        class="w-full h-full object-cover"
        controls
        preload="metadata"
        playsinline
      >
        <source src="/videos/spec2.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Short 3 -->
    <div class="w-full aspect-[9/16] rounded-lg overflow-hidden shadow">
      <video
        class="w-full h-full object-cover"
        controls
        preload="metadata"
        playsinline
      >
        <source src="/videos/spec3.mp4" type="video/mp4" />
      </video>
    </div>

  </div>
</section>



    </main>

    <Footer />
  </body>
</html>
